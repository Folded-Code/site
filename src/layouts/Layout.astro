---
export interface Props {
  title: string
  class?: string
}

const { title, class: className } = Astro.props

import '@fontsource/bitter'
import '@fontsource/bitter/600.css'

import '@fontsource/nunito'
import '@fontsource/nunito/600.css'
import '@fontsource/nunito/700.css'

import '@fontsource/ubuntu/700.css'
import Navbar from '../components/Navbar.astro'
import Footer from '../components/Footer.astro'
---

<!DOCTYPE html>
<html
  lang="en"
  class="text-white selection:bg-transparent selection:text-sky-400"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col items-center justify-between">
    <div class="flex w-full flex-col items-center">
      <Navbar />
      <main
        class:list={[
          className,
          'px-4 sm:px-8 w-full flex flex-col items-center',
        ]}
      >
        <slot />
      </main>
    </div>
    <Footer />
    <script>
      console.log(`Hello there!`)
    </script>
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      @apply font-sans text-white;
    }

    h1 {
      @apply text-5xl font-bold md:text-6xl;
    }
    h2 {
      @apply text-3xl font-bold md:text-4xl;
    }
    h3 {
      @apply my-2 text-xl font-bold md:text-2xl;
    }
    h4 {
      @apply text-base font-bold md:text-lg;
    }

    p {
      @apply font-mono text-slate-400;
    }

    html,
    body {
      @apply min-h-screen w-full bg-slate-950 text-center font-sans-serif;
    }
    a {
      @apply underline decoration-2 underline-offset-1 duration-300;
    }
    a:hover {
      @apply underline-offset-4;
    }

    .list-parent ul {
      @apply w-full px-4 text-left;
    }
    .list-parent li {
      @apply list-item list-inside list-disc text-slate-300;
    }
  }
</style>
