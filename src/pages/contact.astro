---
import Section from '../components/Section.astro'
import Layout from '../layouts/Layout.astro'

const sectionClass = '!items-start space-y-4 text-left'
---

<Layout title="/contact - Thomas Forbes" class="list-parent">
  <Section class="space-y-4">
    <h1>Contact</h1>
    <p>Where you can find me</p>
  </Section>

  <div class="grid max-w-5xl grid-cols-1 gap-4 px-4 sm:grid-cols-2 sm:px-8">
    <Section class={sectionClass}>
      <h2 class="text-sky-400">Social</h2>
      <ul>
        <li>thomas [at] thomasforbes [dot] com</li>
        <li>
          <a href="https://github.com/thomas-forbes" target="_blank"
            >GitHub (if you like the colour green)</a
          >
        </li>
        <li>
          <a href="https://twitter.com/ThomasForbesy" target="_blank">Twitter</a
          >
        </li>
        <li>
          <a href="https://www.linkedin.com/in/thomas-forbes/" target="_blank"
            >Linkedin</a
          >
        </li>
      </ul>
    </Section>
    <Section class={sectionClass}>
      <h2 class="text-rose-500">Places</h2>
      <ul>
        <li>
          <a href="https://maps.app.goo.gl/hkVti3YvBVQUqzQi8" target="_blank"
            >Angel Island (every saturday)</a
          >
        </li>
        <li>
          <a href="https://maps.app.goo.gl/jUxBbrQdVeDLP4Jt6" target="_blank"
            >Dogpatch, SF</a
          >
        </li>
      </ul>
    </Section>
  </div>
</Layout>

<style>
  h3 {
    @apply text-slate-200;
  }
</style>
